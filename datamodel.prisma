type User {
    id: ID! @id
    avatar : String @default(value: "https://scontent-hkg3-1.cdninstagram.com/vp/51ea9f9……74447047_1561961433825017856_n.jpg?_nc_ht=scontent-hkg3-1.cdninstagram.com")
    userName: String!
    email : String! @unique
    phoneNumber : String! @unique
    password : String!
    likes : [Like!]! @relation (name: "LikesOfUser")
    createdAt : DateTime! @createdAt
    updatedAt : DateTime! @updatedAt
}

enum ContentType {
    TV_SHOW
    MOVIE
}

enum AgeLimitType {
    ALL
    OVER_12
    OVER_15
    OVER_18
}

type Content {
    id : ID! @id
    title : String! @unique
    genres : [Genre!] @relation(name: "GenresOfContent")
    type : ContentType!
    caption : String!
    episodes : [Episode!] @relation(name: "EpisodesOfContent")
    actors : [Actor!] @relation(name: "ActorsOfContent")
    files : [File!]! @relation(name: "FilesOfContent")
    likes : [Like!]! @relation (name : "LikesOfContent")
    createdAt : DateTime! @createdAt
    updatedAt : DateTime! @updatedAt
    is_netflix : Boolean!
    age_limit : AgeLimitType!
}

type Actor {
    id : ID! @id
    name : String! @unique
    contents : [Content!] @relation(name: "ActorsOfContent")
    createdAt : DateTime! @createdAt
    updatedAt : DateTime! @updatedAt
}

type Episode {
    id : ID! @id
    content : Content @relation(name: "EpisodesOfContent")
    title : String!
    caption : String!
    duration : Int!
    season : Int!
    sequence : Int!
    createdAt : DateTime! @createdAt
    updatedAt : DateTime! @updatedAt
}

enum GenreType {
    CHUSEOK
    HALLOWEEN
    K_DRAMA
    US_TV_SERIES
    BRITISH_TV_SERIES
    ASIAN_TV_SERIES
    KOREAN_MOVIE
    US_MOVIE
    ACTION
    KIDS
    ROMANCE
    TEEN
    ANIME
    HISTORY
    THRILLERS
    FANTASY
    ADVANTURES
    AWARD_WINNINGS
    DRAMAS
    CRIME
    SCI_FI
}

type Genre {
    id : ID! @id
    name : GenreType! @unique
    contents : [Content!] @relation(name: "GenresOfContent")
}

type File {
    id : ID! @id
    url : String!
    content : Content @relation(name: "FilesOfContent")
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
}

type Like {
    id : ID! @id
    user : User! @relation (name: "LikesOfUser")
    content : Content! @relation (name : "LikesOfContent")
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
}